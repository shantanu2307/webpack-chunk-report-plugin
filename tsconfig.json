{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@app/*": ["./packages/app/src/*"],
      "@plugin/*": ["./packages/plugin/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
